<% obj1.each do |comment| %>
<div class="tweet-comment border-bottom">
  <%= link_to user_path(comment.user) do %>
  <%= attachment_image_tag comment.user, :image, fallback: 'no_image.jpg',size: '40x40', class: 'mb-3 rounded-circle' %><span><%= "#{comment.user.name}" %></span>
  <% end %>
  <p><%= comment.content %></p>
  <%= attachment_image_tag comment, :image, size: '100x100', class: 'mb-3' %>
  <% if comment.user == current_user %>
    <%= link_to '削除する', tweet_tweet_comment_path(obj2.id,comment.id), {method: :delete, remote: true, id: "tweet-comment-#{comment.id}-delete-link"} %>
  <% end %>
</div>
<% end %>