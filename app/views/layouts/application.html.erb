<!DOCTYPE html>
<html>
  <head>
    <title>筋トレノート</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <ul class="nav mr-auto">
           <a class="navbar-brand" href="/">
             <span class="font-weight-bold">筋トレノート</span>
           </a>
          </ul>
         
          <% if user_signed_in? %>  <!--ログインしている場合-->
            <ul class="nav">
             <li class="nav-item ml-auto">
               <%= link_to "マイページ", user_path(current_user), {class: 'nav-link btn btn-outline-primary mr-3'} %>
             </li>
             <li class="nav-item">
               <%= link_to 'ログアウト', destroy_user_session_path, {method: :delete, class: 'nav-link btn btn-outline-primary mr-3'} %>
             </li>
             <li class="nav-item">
               <a class="nav-link btn btn-outline-primary mr-3" href="#">お問い合わせ</a>
             </li> 
            </ul>
          <% else %> <!--ログインしていない場合-->
            <ul class="nav">
             <li class="nav-item ml-auto">
               <%= link_to '新規登録', new_user_registration_path, {class: 'nav-link btn btn-outline-primary mr-3'} %>
             </li>
             <li class="nav-item">
               <%= link_to 'ログイン', new_user_session_path, {class: 'nav-link btn btn-outline-primary mr-3'} %>
             </li>
             <li class="nav-item">
               <a class="nav-link btn btn-outline-primary mr-3" href="#">お問い合わせ</a>
             </li> 
            </ul>
          <% end %>
        </nav>
    </header>
    <%= yield %>
  </body>
</html>
