<div class="user-image-profile-box d-flex justify-content-center">
  <div class="user-image-box mr-2">
    <%= attachment_image_tag obj, :image, fallback: 'no_image.jpg', size: '150x150', class: 'user-image' %>
  </div>
  <div class="user-profile-box ml-2 mt-3">
    <h5 class="user-data-label">ユーザー名</h5>
    <p class="mb-3 user-data"><%= obj.name %></p>
    <h5 class="user-data-label">筋トレ歴</h5>
    <p class="mb-3 user-data"><%= calc_date_diff(obj.start_date) %></p>
  </div>
</div>

<div class="follow-follower-count d-flex justify-content">
  <div class="follow-count-box mr-1">
      <p>フォロー</p>
      <p class="follow-count"><%= link_to "#{obj.following.count}", following_user_path(obj) %></p>
  </div>
  <div class="follower-count-box ml-1">
      <p>フォロワー</p>
      <p><%= link_to "#{obj.followed.count}", followers_user_path(obj) %></p>
  </div>
</div>

<h5 class="user-data-label">身長</h5>
<p class="mb-3 user-data"><%= obj.tall || '未入力'%>cm</p>
<h5 class="user-data-label">体重</h5>
<p class="mb-3 user-data"><%= obj.weight || '未入力' %>kg</p>
<h5 class="user-data-label">体脂肪率</h5>
<p class="mb-3 user-data"><%= obj.body_fat_percentage || '未入力' %>%</p>
<% if obj == current_user %>
  <%= link_to '会員情報編集はこちら', edit_user_registration_path, {class: 'user-edit-link'} %>
<% end %>