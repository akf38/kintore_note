<div class='user-form-background'>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 my-4 offset-sm-3">
        <div class="main-layout-container rounded-lg shadow-lg bg-warning">
          <h4 class='main-layout-title text-center bg-danger text-white rounded-top py-1 font-weight-bold'>体型情報入力画面</h4>
          <div class="main-layout-box  mb-2 mt-1 rounded">
            <%= form_with model: @user, url: user_path, local: true, method: :patch do |f| %>
             <%= render "layouts/errors", obj: @user %>
              
              <table class="d-flex justify-content-center mt-4">
                <tbody>
                  <tr class='user-field'><td><%= f.label :tall, '身長:', {class: 'ml-4'} %></td><td><%= f.number_field :tall, autofocus: true, placeholder: 'cm' %> cm</td></tr>
                  <tr class='user-field'><td><%= f.label :weight, '体重:', {class: 'ml-4 mb-3'} %></td><td><%= f.number_field :weight, placeholder: 'kg' %> kg</td></tr>
                  <tr class='user-field'><td><%= f.label :body_fat_percentage, '体脂肪率:　', {class: 'ml-4'} %></td><td><%= f.number_field :body_fat_percentage, placeholder: '%' %> %</td></tr>
                </tbody>
              </table>
            
              <div class="actions text-center mt-4">
                <%= f.submit "更新する", {class: 'btn btn-success mb-3'}%><br>
              </div>
            <% end %>
          </div>
          <%= link_to "<<戻る", user_user_infos_path(@user) %>
      </div>
    </div>
  </div>
</div>
