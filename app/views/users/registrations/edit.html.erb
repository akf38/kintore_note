

<div class='user-form-background'>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 my-4 offset-sm-3">
        <div class="main-layout-container rounded-lg shadow-lg bg-warning">
          <h4 class='main-layout-title text-center bg-danger text-white rounded-top py-1 font-weight-bold'>ユーザー情報編集</h4>
          <div class="main-layout-box  mb-2 mt-1 rounded">
            <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
              <%= render "users/shared/error_messages", resource: resource %>
              
              <table class="d-flex justify-content-center mt-4">
                <tbody>
                  <tr class='user-field'><td><%= f.label :name, 'ユーザー名:', {class: 'ml-4 mb-3'} %></td><td><%= f.text_field :name, autofocus: true, class: 'mr-3 mb-3' %></td></tr>
                  <tr class='user-field'><td><%= f.label :email, 'メールアドレス:', {class: 'ml-4 mb-3'} %></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mr-3 mb-3' %></td></tr>
                  <tr class='user-field'><td><%= f.label :profile, 'プロフィール:', {class: 'ml-4'} %></td><td><%= f.text_area :profile, autofocus: true, class: 'mr-3 mb-3' %></td></tr>
                  <tr class='user-field'><td><%= f.label :start_date, '筋トレ開始日:', {class: 'ml-4'} %></td><td><%= f.date_field :start_date, class: 'mr-3 mb-3' %></td></tr>
                </tbody>
              </table>
            
              <div class="actions text-center mt-4">
                <%= f.submit "変更内容を保存する", {class: 'btn btn-success mb-3'}%>
            <% end %>
          </div>
          <div class='d-flex justify-content-end'>
            <%= link_to '退会', soft_delete_user_path(@user), method: :post, 'data-confirm' => '本当に退会しますか？', class: 'btn btn-danger' %>  
          </div>
        </div>
      </div>
    </div>
  </div>
</div>









