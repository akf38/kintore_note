<div class="container">
  <h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field mb-3">
      <%= f.label :tall %><br />
      <%= f.number_field :tall, autofocus: true, placeholder: 'cm' %>
    </div>
    
  <div class="field mb-3">
    <%= f.label :weight %><br />
    <%= f.number_field :weight, autofocus: true, placeholder: 'kg' %>
  </div>
  
   <div class="field mb-3">
    <%= f.label :body_fat_percentage %><br />
    <%= f.number_field :body_fat_percentage, autofocus: true, placeholder: '%' %>
  </div>
  
  <div class="field mb-3">
    <%= f.label :start_date %><br />
    <%= f.date_field :start_date %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
  
</div>
