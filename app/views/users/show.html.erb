<div class="container mt-3">
  <div class="row">
    <div class="col-sm-4 user-info">
      <%= render 'layouts/user_sidebar', obj: @user %>
      <%= render 'follow_button', obj: @user %>
    </div>
    <div class="col-sm-8">
      <div>
        <ul class="nav nav-tabs">
        <li class="nav-item">
          <a href="#user-weight-graph" class="nav-link border" data-toggle='tab active'>体重(kg)</a>
        </li>
        <li class="nav-item">
          <a href="#user-body_fat_percentage-graph" class="nav-link border" data-toggle='tab'>体脂肪率(%)</a>
        </li>
        <li class="d-flex align-items-center ml-auto">
          <%= link_to '記録一覧はこちら>>', user_user_infos_path(@user.id), 'data-turbolinks': false, class: 'user_info_link' %>
        </li>
      </ul>
      
      <div class="tab-content mb-4">
        <div id='user-weight-graph' class='tab-pane active'>
          <%= line_chart @weight_data, height: "200px"%>
        </div>
        <div id='user-body_fat_percentage-graph' class='tab-pane'>
          <%= line_chart @body_fat_percentage_data, height: "200px" %>
        </div>
      </div>
      </div>
      
      <div class="tweet-container rounded-lg shadow-lg bg-warning border">
        <h4 class='text-center bg-danger text-white rounded-top py-1 font-weight-bold'>タイムライン</h4>
        <div class="tweet-box  mb-2 mt-1 rounded">
          <% @tweets.each do |tweet| %>
          <div class="tweet border-bottom m-3 bg-white rounded">
            <div class='tweet-main  d-flex justify-content-between'>
              <div class='tweet-left ml-3'>
                <%= attachment_image_tag tweet.user, :image, fallback: 'no_image.jpg', size: '40x40', class: 'm-3 rounded-circle' %><span class='font-weight-bold'><%= "#{tweet.user.name}" %></span>
                <p><%= tweet.content %></p>
              </div>
              <div class='tweet-right mr-3 d-flex align-items-center'>
                <%= attachment_image_tag tweet, :image, size: '100x100' %>
              </div>
            </div>
            <div class='tweet-info d-flex'>
              <div id="favorite-btn-<%= tweet.id %>" class='ml-auto'><%= render 'shared/favorite_btn', obj: tweet %></div>
              <div class='tweet-comment mx-3'><%= link_to "コメント#{tweet.tweet_comments.count}", tweet_path(tweet.id) %></div>
              <div class='tweet-time mx-3'><%= "#{tweet.created_at}" %></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>