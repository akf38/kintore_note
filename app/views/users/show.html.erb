<div class="container mt-3">
  <div class="row">
    <div class="col-4 user-info">
      <h2 class="mb-3">ユーザー情報</h2>
      <%= attachment_image_tag @user, :image, fallback: 'no_image.jpg', size: '150x150', class: 'mb-3' %>
      <h3>ユーザー名</h3>
      <p class="mb-3"><%= @user.name %></p>
      <h3>身長</h3>
      <% if @user.tall %>
      <p class="mb-3"><%= @user.tall %>cm</p>
      <% else %>
      <p class="mb-3">未入力</p>
      <% end %>
      <h3>体重</h3>
      <% if @user.weight %>
      <p class="mb-3"><%= @user.weight %>kg</p>
      <% else %>
      <p class="mb-3">未入力</p>
      <% end %>
      <h3>体脂肪率</h3>
      <% if @user.body_fat_percentage %>
      <p class="mb-3"><%= @user.body_fat_percentage %>%</p>
      <% else %>
      <p class="mb-3">未入力</p>
      <% end %>
      <h3>プロフィール</h3>
      <% if @user.profile %>
      <p class="mb-4"><%= @user.profile %></p>
      <% else %>
      <p class="mb-4">未入力</p>
      <% end %>
      <%= link_to 'ユーザー会員情報編集', edit_user_registration_path, {class: 'btn btn-success mb-3'} %>
       <%= link_to '体型記録をつける！', edit_user_path, {class: 'btn btn-primary'} %>
    </div>
    <div class="col-8">
      <h2>体重推移</h2>
      <%= link_to '過去の記録一覧はこちら', user_user_infos_path(@user.id), 'data-turbolinks': false %>
      <%= line_chart @weight_data, width: "600px", height: "300px" %>
      <h2>体脂肪率推移</h2>
      <%= link_to '過去の記録一覧はこちら', user_user_infos_path(@user.id), 'data-turbolinks': false %>
      <%= line_chart @body_fat_percentage_data, width: "600px", height: "300px" %>
    </div>
  </div>
</div>