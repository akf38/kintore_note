<% unless current_user == obj %> <!--ログインユーザー自身のページではない場合のみ表示-->
  <div class="follow button">
    <% if current_user.following?(obj) %> <!-- フォロー中の場合 -->
      <%= form_with(model: current_user.active_relationships.find_by(followed_id: obj.id), method: :delete, local: true) do |f| %>
      <%= f.submit 'フォローを外す', class: 'btn btn-danger' %>
      <% end %>
    <% else %> <!-- フォローしていない場合 -->
      <%= form_with(model: current_user.active_relationships.build, local: true) do |f| %>
      <%= hidden_field_tag :followed_id, obj.id %>
      <%= f.submit 'フォローする！', class: 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>
<% end %>