
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <p>下記アカウントもご利用いただけます。</p>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% case "#{provider}" %>
    <% when 'twitter' %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'sns-link' do %>
        <%= image_tag 'twitter_icon.png', class: 'sns-icon mx-2' %>
      <% end %>
    <% when 'facebook' %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'sns-link' do %>
        <%= image_tag 'facebook_icon.png', class: 'sns-icon mx-2' %>
      <% end %>
    <% when 'google_oauth2' %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: 'sns-link' do %>
        <%= image_tag 'google_icon.png', class: 'sns-icon mx-2' %>
      <% end %><br />
    <% end %>
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
  <div class='py-4'>
    <%= link_to "ログインはこちら>>", new_session_path(resource_name), class: 'mt-3 mb-2' %><br />
    <%= link_to 'ゲストログインはこちら>>', users_guest_sign_in_path, class: 'mt-3 mb-5', method: :post %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class='py-4'>
    <%= link_to "新規登録はこちら>>", new_registration_path(resource_name) %><br />
    <%= link_to 'ゲストログインはこちら>>', users_guest_sign_in_path, class: 'mt-3 mb-5', method: :post %>
  </div>
<% end %>

