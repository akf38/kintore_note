<div class="container">
  <h2><%= "#{@record.created_at.strftime('%Y/%m/%d')}トレーニング詳細" %></h2>
  <%= link_to 'トレーニング内容の編集はこちら', edit_record_path(@record) %>
  <row>
    <%= render 'layouts/errors', obj: @training_record %>
    <%= form_with model: [@record,@training_record], local: true do |f| %>
      <%= f.collection_select(:training_id, Training.all, :id, :name) %>
      <%= f.number_field :weight %>kg
      <%= f.number_field :rep %>回
      <%= f.number_field :set %>セット
      <%= f.submit '記録する' %>
    <% end %>
  </row>
  <table class="table">
    <thead>
      <th>トレーニング名</th>
      <th>重量</th>
      <th>レップ数</th>
      <th>セット数</th>
    </thead>
    <tbody>
      <% @record.training_records.each do |t_record| %>
      <tr>
        <td><%= t_record.training.name %></td>
        <td><%= t_record.weight %>kg</td>
        <td><%= t_record.rep %>回</td>
        <td><%= t_record.set %>セット</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>