<div class="container mt-3">
  <div class="row">
    <div class="col-4 user-info">
      <%= render 'layouts/user_sidebar', obj: current_user %>
      <%= link_to '筋トレ仲間を探す！', users_path %>
    </div>
    <div class="col-8">
      <div class="new-tweet">
        <h2>新規投稿</h2>
        <%= form_with model: @tweet, local: true do |f| %>
        <div class="field">
        <%= f.label :image %><br />
        <%= f.attachment_field :image %>
        </div>
        <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content %>
        </div>
        <div class="actions">
        <%= f.submit "投稿する" %>
        </div>
        <% end %>
      </div>
      
      <h2>ツイート一覧</h2>
      <% @tweets.each do |tweet| %>
      <div class="tweet border-bottom ">
        <%= attachment_image_tag tweet.user, :image, fallback: 'no_image.jpg', size: '40x40', class: 'mb-3' %><span><%= "#{tweet.user.name}" %></span>
        <p><%= tweet.content %></p>
        <%= attachment_image_tag tweet, :image, fallback: 'no_image.jpg', size: '100x100', class: 'mb-3' %>
        <div id="favorite-btn-<%= tweet.id %>"><%= render 'shared/favorite_btn', obj: tweet %></div>
        <div class='tweet-comment'><%= link_to "コメント#{tweet.tweet_comments.count}", tweet_path(tweet.id) %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>