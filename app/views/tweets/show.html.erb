<div class="container-fluid mt-3">
  <div class="row">
    <div class="col-lg-4 offset-lg-1 user-info mb-5 mt-3">
      <%= render 'layouts/user_sidebar', obj: current_user %>
    </div>
    <div class="col-lg-6">
      <h2 class='text-center'>ツイート詳細</h2>
      <div class="tweet border-bottom">
        <%= link_to user_path(@tweet.user) do %>
        <%= attachment_image_tag @tweet.user, :image, fallback: 'no_image.jpg', size: '40x40', class: 'mb-3 rounded-circle' %><span><%= "#{@tweet.user.name}" %></span>
        <% end %>
        <p><%= @tweet.content %></p>
        <%= attachment_image_tag @tweet, :image, size: '100x100', class: 'mb-3' %>
        <div id="favorite-btn-<%= @tweet.id %>"><%= render 'favorites/favorite_btn', obj: @tweet %></div>
        <div class='tweet-comment'><%= "コメント#{@tweet.tweet_comments.count}件" %></div>
      </div>
      <div class="tweet-comments-box">
        <%= render partial: 'tweet_comments/tweet_comments_list', locals: {obj1: @tweet_comments, obj2: @tweet} %>
      </div>
      <div class="tweet-comment-form-box">
        <%= render partial: 'tweets/tweet_comment_form', locals: {obj1: @tweet, obj2: @tweet_comment} %>
      </div>
    </div>
  </div>
</div>