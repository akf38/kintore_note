<div class="container mt-3">
  <div class="row">
    <div class="col-4 user-info">
      <%= render 'layouts/user_sidebar', obj: current_user %>
      <%= link_to '筋トレ仲間を探す！', users_path %>
    </div>
    <div class="col-8">
      <h2>ツイート詳細</h2>
      <div class="tweet border-bottom">
        <%= link_to user_path(@tweet.user) do %>
        <%= attachment_image_tag @tweet.user, :image, fallback: 'no_image.jpg', size: '40x40', class: 'mb-3' %><span><%= "#{@tweet.user.name}" %></span>
        <% end %>
        <p><%= @tweet.content %></p>
        <%= attachment_image_tag @tweet, :image, fallback: 'no_image.jpg', size: '100x100', class: 'mb-3' %>
        <div id="favorite-btn-<%= @tweet.id %>"><%= render 'shared/favorite_btn', obj: @tweet %></div>
        <div class='tweet-comment'><%= "コメント#{@tweet.tweet_comments.count}件" %></div>
      </div>
      <div class="tweet-comments">
        <% @tweet.tweet_comments.each do |comment| %>
        <div class="tweet-comment border-bottom">
          <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :image, fallback: 'no_image.jpg', size: '40x40', class: 'mb-3' %><span><%= "#{comment.user.name}" %></span>
          <% end %>
          <p><%= comment.content %></p>
          <%= attachment_image_tag comment, :image, fallback: 'no_image.jpg', size: '100x100', class: 'mb-3' %>
          <% if comment.user == current_user %>
            <%= link_to '削除する', tweet_tweet_comment_path(@tweet.id,comment.id), method: :delete %>
          <% end %>
        </div>
        <% end %>
      </div>
      <div class="tweet-comment-form">
        <h2>コメント投稿</h2>
        <%= form_with model:[@tweet, @tweet_comment], local: true do |f| %>
        <div class="field">
        <%= f.label :image %><br />
        <%= f.attachment_field :image %>
        </div>
        <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content %>
        </div>
        <div class="actions">
        <%= f.submit "投稿する" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>