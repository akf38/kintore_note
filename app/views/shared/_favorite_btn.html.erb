<% if favo = Favorite.find_by(user_id: current_user.id, tweet_id: obj.id) %>
    <%= link_to "♥#{obj.favorites.count}", tweet_favorite_path(obj.id, favo.id), {method: :delete, class: "favorited", local: true} %>
<% else %>
     <%= link_to "♥#{obj.favorites.count}", tweet_favorites_path(obj.id), method: :post, local: true %>
<% end %>